    <%= render partial: 'search_form' %>
<div id="movie-title">
  <%= @movie[:Title] %>
</div>

<span><%= @movie[:Year] %> <%= @movie[:Rated] %> <%= @movie[:Runtime] %></span>

<div id="movie-description">
  <%= @movie[:Plot] %>
</div>

<div class="movie-reviews">
  <h2> Reviews </h2>
    <% Review.for_movie(@movie[:imdbID]).each do |review| %>
  <div class="movie-review">
    <h3><%= review.title %></h3>
    <p><%= review.body %><p>
    <%= review.stars %>
    <p>--<%= link_to review.user.user_name, user_path(review.user) %></p>
  </div>
    <% end %>
</div>
  <% if !find_reviews_by_user.any?{|r| r.movie_id == params[:id]} %>
  <%= link_to "Review", controller: :reviews, action: :new, movie_id: @movie[:imdbID] %>
<% end %>

<div class="movie-comments">
  <h2> Comments </h2>
    <% Comment.for_movie(@movie[:imdbID]).each do |comment| %>
  <div class="movie-comment">
    <p><%= comment.body %><p>
    <p>--<%= link_to comment.user.user_name, user_path(comment.user) %></p>
  </div>
    <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "Comment", controller: :comments, action: :new, movie_id: @movie[:imdbID] %>
<% end %>

