

<h2 class="homepage-header">IMDB </h2>
<h4 class="homepage-subheader"> Recent Reviews </h4>
<div class="recent-movies">
    <% @movies.each do |movie| %>
    <div class="home-movie inline-block">
      <div class="home-movie-poster"> <img class="movie-image" src="<%= movie[:Poster] %>"> </div>
      <div class="overlay white-overlay">
        <div class="overlay-title">
            <%=link_to movie[:Title], "/movies/#{movie[:imdbID]}", class: "homepage-link" %>
        </div>
        <div class="overlay-stars">
            <%= Review.for_movie([movie[:imdbID]])[-1].stars %>
        </div>
        <div class="overlay-users">
            -- <%= link_to Review.for_movie([movie[:imdbID]])[-1].username, user_path(Review.for_movie([movie[:imdbID]])[-1].user), class: "homepage-link" %>
        </div>
      </div>
    </div>
    <% end %>
</div>


